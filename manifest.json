{
  "manifest_version": 2,

  "name": "Select-n-Save",
  "description": "Save content locally",
  "version": "1.0",

  "browser_action": {
    "default_popup": "extension_popup.html"
  },

  "icons": {
    "16": "S-n-S.png",
    "32": "S-n-S.png",
    "64": "S-n-S.png",
    "128": "S-n-S.png"
  },

  "background": {
    "scripts": ["saveLocally.js"]
  },

  "permissions": [
    "contextMenus",
    "storage"
  ]

}
